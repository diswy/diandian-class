<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		tools:context="com.cqebd.live.ui.frag.LockFragment"
		tools:ignore="PxUsage">

	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/layout_parent"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/bg_lock_screen">

		<TextView
				android:id="@+id/lock_screen_datetime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/date_color"
				android:textSize="120px"
				app:layout_constraintBottom_toTopOf="@id/lock_screen_title"
				app:layout_constraintEnd_toEndOf="@id/lock_screen_title"
				app:layout_constraintStart_toStartOf="@id/lock_screen_title"
				tools:text="16：55" />

		<TextView
				android:id="@+id/lock_screen_title"
				android:layout_width="781px"
				android:layout_height="113px"
				android:layout_marginStart="169px"
				android:layout_marginTop="289px"
				android:gravity="center"
				android:text="正在授课，请认真听讲"
				android:textColor="@color/date_color"
				android:textSize="65px"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

		<TextView
				android:id="@+id/lock_screen_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="26px"
				android:textColor="@color/date_color"
				android:textSize="49px"
				app:layout_constraintEnd_toEndOf="@id/lock_screen_title"
				app:layout_constraintStart_toStartOf="@id/lock_screen_title"
				app:layout_constraintTop_toBottomOf="@id/lock_screen_title"
				tools:text="2月22日 周五下午" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
