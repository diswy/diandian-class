<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:ignore="HardcodedText,PxUsage">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="80px"
			android:background="@color/colorPrimary"
			android:gravity="center_vertical"
			android:paddingStart="40px"
			android:paddingEnd="40px"
			android:text="管理员"
			android:textColor="@color/white" />

		<EditText
			android:id="@+id/et_pwd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="32px"
			android:hint="请输入管理员密码" />

		<LinearLayout
			android:padding="24px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<xiaofu.lib.view.FancyButton
				android:id="@+id/btn_cancel"
				android:layout_width="0dp"
				android:layout_height="60px"
				android:layout_weight="1"
				android:gravity="center"
				android:text="取消"
				app:fb_corner_radius="8px"
				app:fb_ripple="true"
				app:fb_shape="rect"
				app:fb_solid_normal="@color/colorCC" />

			<xiaofu.lib.view.FancyButton
				android:id="@+id/btn_confirm"
				android:layout_width="0dp"
				android:layout_height="60px"
				android:layout_marginStart="32px"
				android:layout_weight="1"
				android:gravity="center"
				android:text="确认"
				android:textColor="@color/white"
				app:fb_corner_radius="8px"
				app:fb_ripple="true"
				app:fb_shape="rect"
				app:fb_solid_normal="@color/colorPrimary" />

		</LinearLayout>

	</LinearLayout>

</layout>